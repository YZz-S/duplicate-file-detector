{
  "name": "duplicate-file-detector",
  "private": true,
  "version": "1.0.0",
  "description": "A comprehensive duplicate file detection and deletion tool supporting multiple file formats including audio, video, image, document, and archive files.",
  "author": {
    "name": "Duplicate File Detector Team",
    "email": "support@duplicate-file-detector.com"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "check": "tsc -b --noEmit",
    "electron:dev": "npm run electron:build-dev && concurrently \"npm run dev\" \"npx wait-on http://localhost:5174 && npx electron .\"",
    "electron:build": "npm run build && vite build --config vite.electron.config.ts",
    "electron:build-dev": "vite build --config vite.electron.config.ts",
    "electron:pack": "npm run electron:build && electron-builder",
    "electron:dist": "npm run electron:build && electron-builder --publish=never",
    "electron:release": "npm run electron:build && electron-builder --publish=always",
    "release:local": "npm run electron:dist",
    "release:github": "npm run electron:release",
    "start": "powershell -ExecutionPolicy Bypass -File powershell-start.ps1",
    "health-check": "node scripts/check-deps.js",
    "port:check": "node scripts/port-manager.js check",
    "port:kill": "node scripts/port-manager.js kill"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "sonner": "^2.0.2",
    "tailwind-merge": "^3.0.2",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.3",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.6",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.duplicate-file-detector.app",
    "productName": "Duplicate File Detector",
    "icon": "assets/icons/icon.png",
    "directories": {
      "output": "release-new"
    },
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "forceCodeSigning": false,
    "asar": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "npmRebuild": false,
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
